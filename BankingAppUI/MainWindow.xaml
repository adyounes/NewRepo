<Window x:Class="BankingWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Banking App" Height="180" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <!-- Section d'authentification -->
            <TextBlock Text="Authentification" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Login :" Width="100" VerticalAlignment="Center"/>
                <TextBox Name="LoginTextBox" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                <TextBlock Text="Mot de passe :" Width="100" VerticalAlignment="Center"/>
                <PasswordBox Name="PasswordBox" Width="200"/>
            </StackPanel>
            <Button Name="LoginButton" Content="Se connecter" Width="150" Height="30" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
